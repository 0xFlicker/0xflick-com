{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "NodeNext",
    "composite": true /* Enable the use of the ES2015 module loader. */,
    "rootDir": "./src" /* Specify the root folder within your source files. */,
    "outDir": "dist" /* Specify an output folder for all emitted files. */,
    "paths": {
      "@0xflick/models": ["../models/src/index"],
      "@0xflick/models/*": ["../models/src/*"],
      "@0xflick/backend": ["../backend/src/index"],
      "@0xflick/backend/*": ["../backend/src/*"],
      "@0xflick/contracts": ["../contracts/src/index"],
      "@0xflick/contracts/*": ["../contracts/src/*"]
    },
    "noErrorTruncation": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictNullChecks": false
    // "strictPropertyInitialization": false
  },
  "include": ["**/*.ts"],
  "exclude": ["**/node_modules", "**/.*/", "dist", "build"],
  "references": [
    {
      "path": "../models"
    },
    {
      "path": "../backend"
    },
    {
      "path": "../contracts"
    }
  ]
}
